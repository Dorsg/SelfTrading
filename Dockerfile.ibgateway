FROM datawookie/ib-gateway:1026.1h

USER root

# Xvfb for the headless X-server + a system JRE that puts `java` on $PATH
RUN apt-get update \
 && DEBIAN_FRONTEND=noninteractive \
    apt-get install -y --no-install-recommends xvfb openjdk-8-jre-headless \
 && rm -rf /var/lib/apt/lists/*

COPY entrypoint_ibgateway.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]
CMD []
