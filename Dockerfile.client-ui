# Dockerfile.client-ui
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY client-ui/package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the Vue app
COPY client-ui ./

# Build the Vue app
RUN npm run build

# Install a static file server to serve the built files
RUN npm install -g serve

# Expose port and serve the app
EXPOSE 8080
CMD ["serve", "-s", "dist", "-l", "8080"]
